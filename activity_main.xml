                    android:id="@+id/answer_5_c"
                    style="@style/radio_buttons"
                    android:text="@string/quest_5_c" />

                <RadioButton
                    android:id="@+id/answer_5_d"
                    style="@style/radio_buttons"
                    android:text="@string/quest_5_d" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            style="@style/question_layout">

            <TextView
                style="@style/questions_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_6" />

            <RadioGroup
                android:id="@+id/question_6_answers"
                style="@style/radio_group_style">

                <RadioButton
                    android:id="@+id/answer_6_a"
                    style="@style/radio_buttons"
                    android:text="@string/quest_6_a" />

                <RadioButton
                    android:id="@+id/answer_6_b"
                    style="@style/radio_buttons"
                     android:text="@string/quest_6_b" />

                <RadioButton
                    android:id="@+id/answer_6_c"
                    style="@style/radio_buttons"
                    android:text="@string/quest_6_c" />

                <RadioButton
                    android:id="@+id/answer_6_d"
                    style="@style/radio_buttons"
                    android:text="@string/quest_6_d" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            style="@style/question_layout">

            <TextView
                style="@style/questions_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_7" />

            <LinearLayout style="@style/radio_group_style">

                <CheckBox
                    android:id="@+id/answer_7_a"
                    style="@style/radio_buttons"
                    android:text="@string/quest_7_a" />

                <CheckBox
                    android:id="@+id/answer_7_b"
                    style="@style/radio_buttons"
                    android:text="@string/quest_7_b" />

                <CheckBox
                    android:id="@+id/answer_7_c"
                    style="@style/radio_buttons"
                    android:text="@string/quest_7_c" />

                <CheckBox
                    android:id="@+id/answer_7_d"
                    style="@style/radio_buttons"
                    android:text="@string/quest_7_d" />

                <CheckBox
                    android:id="@+id/answer_7_e"
                    style="@style/radio_buttons"
                    android:text="@string/quest_7_e" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/question_layout"
            android:padding="5dp">

            <Button
                android:id="@+id/resume_button"
                style="@style/button_style"
                android:onClick="quizResume"
                android:text="@string/try_button_text" />

            <TextView
                android:id="@+id/resumeQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor2"
                android:textSize="16sp" />

            <Button
                style="@style/button_style"
                android:onClick="quizRestart"
                android:text="@string/reset_button_text" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>
